<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    style="Theme.Material3.Light.NoActionBar">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/app_widget_preview_background"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/josefinsans_bold"
                android:text="Today in History"
                android:textAlignment="center"
                android:textColor="@color/baby_powder" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/appwidget_layout_marginLeft"
            android:layout_marginTop="@dimen/appwidget_layout_marginTop"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/appwidget_image_size"
                android:layout_height="@dimen/appwidget_image_size"
                android:background="@drawable/round_shape"
                android:clipToOutline="true"
                android:src="@drawable/cia_seal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/appwidget_text_layout_marginLeft"
                android:paddingRight="@dimen/appwidget_text_layout_paddingRight"
                android:text="@string/widget_preview_item_1"
                android:textColor="@color/baby_powder" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/appwidget_layout_marginLeft"
            android:layout_marginTop="@dimen/appwidget_layout_marginTop"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/appwidget_image_size"
                android:layout_height="@dimen/appwidget_image_size"
                android:background="@drawable/round_shape"
                android:clipToOutline="true"
                android:src="@drawable/nasa_seal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/appwidget_text_layout_marginLeft"
                android:paddingRight="@dimen/appwidget_text_layout_paddingRight"
                android:text="@string/widget_preview_item_3"
                android:textColor="@color/baby_powder" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/appwidget_layout_marginLeft"
            android:layout_marginTop="@dimen/appwidget_layout_marginTop"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/appwidget_image_size"
                android:layout_height="@dimen/appwidget_image_size"
                android:background="@drawable/round_shape"
                android:clipToOutline="true"
                android:src="@drawable/us_fte_seal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/appwidget_text_layout_marginLeft"
                android:paddingRight="@dimen/appwidget_text_layout_paddingRight"
                android:text="@string/widget_preview_item_2"
                android:textColor="@color/baby_powder" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>